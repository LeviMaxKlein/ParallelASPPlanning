#! /usr/bin/env python

import logging
import os
import platform

from lab.calls.call import Call
from lab import tools

tools.configure_logging()

logging.info(f"node: {platform.node()}")

run_log = open("run.log", "wb")
run_err = open("run.err", "wb", buffering=0)  # disable buffering
redirects = {"stdout": run_log, "stderr": run_err}

# Make sure we're in the run directory.
os.chdir(os.path.dirname(os.path.abspath(__file__)))

Call(['/home/levlap/miniconda3/bin/python3', 'downward/fast-downward.py', '--translate', '/home/levlap/Documents/Bachelorarbeit/downward-benchmarks/gripper/domain.pddl', '/home/levlap/Documents/Bachelorarbeit/downward-benchmarks/gripper/prob02.pddl'], hard_stderr_limit=10240, hard_stdout_limit=10240, memory_limit=None, name='downward_translate', soft_stderr_limit=64, soft_stdout_limit=1024, time_limit=None, **redirects).wait()


for f in [run_log, run_err]:
    f.close()
    if os.path.getsize(f.name) == 0:
        os.remove(f.name)
